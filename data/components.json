{
  "Button": {
    "description": "Primary action element for user interactions",
    "variants": {
      "default": {
        "background": "primary",
        "color": "primary-foreground",
        "hover": "primary/90",
        "shadow": "shadow-sm"
      },
      "secondary": {
        "background": "secondary",
        "color": "secondary-foreground",
        "hover": "secondary/80"
      },
      "destructive": {
        "background": "destructive",
        "color": "destructive-foreground",
        "hover": "destructive/90"
      },
      "outline": {
        "border": "border-input",
        "background": "background",
        "hover": "accent",
        "hoverColor": "accent-foreground"
      },
      "ghost": {
        "background": "transparent",
        "hover": "accent",
        "hoverColor": "accent-foreground"
      },
      "link": {
        "color": "primary",
        "textDecoration": "underline-offset-4 hover:underline"
      }
    },
    "sizes": {
      "default": {
        "height": "40px",
        "padding": "0 16px",
        "fontSize": "14px",
        "classes": "h-10 px-4 py-2"
      },
      "sm": {
        "height": "36px",
        "padding": "0 12px",
        "fontSize": "14px",
        "classes": "h-9 rounded-md px-3"
      },
      "lg": {
        "height": "44px",
        "padding": "0 32px",
        "fontSize": "14px",
        "classes": "h-11 rounded-md px-8"
      },
      "icon": {
        "height": "40px",
        "width": "40px",
        "padding": "0",
        "classes": "h-10 w-10"
      }
    },
    "states": {
      "focus": {
        "outline": "none",
        "ring": "2px",
        "ringColor": "ring",
        "ringOffset": "2px",
        "classes": "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
      },
      "disabled": {
        "opacity": 0.5,
        "cursor": "not-allowed",
        "pointerEvents": "none",
        "classes": "disabled:pointer-events-none disabled:opacity-50"
      }
    },
    "baseStyles": {
      "display": "inline-flex",
      "alignItems": "center",
      "justifyContent": "center",
      "gap": "0.5rem",
      "borderRadius": "0.375rem",
      "fontSize": "0.875rem",
      "fontWeight": 500,
      "transition": "colors",
      "classes": "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors"
    },
    "accessibility": {
      "minTouchTarget": "44px",
      "focusVisible": true,
      "ariaDisabled": "disabled:aria-disabled"
    }
  },
  "Input": {
    "description": "Text input field for user data entry",
    "properties": {
      "height": "40px",
      "borderRadius": "0.5rem",
      "border": "1px solid",
      "borderColor": "input",
      "padding": "0 12px",
      "fontSize": "14px",
      "background": "background",
      "color": "foreground",
      "placeholderColor": "muted-foreground",
      "classes": "flex h-10 w-full rounded-lg border border-input bg-background px-3 py-2 text-sm text-foreground placeholder:text-muted-foreground"
    },
    "states": {
      "focus": {
        "outline": "none",
        "ring": "2px",
        "ringColor": "ring",
        "borderColor": "transparent",
        "classes": "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:border-transparent"
      },
      "disabled": {
        "cursor": "not-allowed",
        "opacity": 0.5,
        "classes": "disabled:cursor-not-allowed disabled:opacity-50"
      },
      "error": {
        "borderColor": "destructive",
        "ringColor": "destructive"
      }
    },
    "variants": {
      "default": {},
      "withIcon": {
        "paddingLeft": "40px"
      }
    },
    "accessibility": {
      "labelRequired": true,
      "errorAnnouncement": "aria-describedby"
    }
  },
  "Card": {
    "description": "Container for related content and actions",
    "components": {
      "Card": {
        "description": "Main card container",
        "classes": "rounded-lg border border-border bg-card text-card-foreground shadow-sm transition-shadow"
      },
      "CardHeader": {
        "description": "Card header section",
        "classes": "flex flex-col space-y-1.5 p-6"
      },
      "CardTitle": {
        "description": "Card title element",
        "classes": "text-2xl font-semibold leading-none tracking-tight"
      },
      "CardDescription": {
        "description": "Card description text",
        "classes": "text-sm text-muted-foreground"
      },
      "CardContent": {
        "description": "Main card content area",
        "classes": "p-6 pt-0"
      },
      "CardFooter": {
        "description": "Card footer for actions",
        "classes": "flex items-center p-6 pt-0"
      }
    },
    "states": {
      "hover": {
        "shadow": "shadow-md"
      }
    }
  },
  "Dialog": {
    "description": "Modal dialog for important interactions",
    "components": {
      "Dialog": {
        "description": "Root dialog component"
      },
      "DialogTrigger": {
        "description": "Element that opens the dialog"
      },
      "DialogContent": {
        "description": "Main dialog content container",
        "classes": "fixed left-[50%] top-[50%] z-50 grid w-full max-w-lg translate-x-[-50%] translate-y-[-50%] gap-4 border bg-background p-6 shadow-lg duration-200 sm:rounded-lg"
      },
      "DialogHeader": {
        "description": "Dialog header section",
        "classes": "flex flex-col space-y-1.5 text-center sm:text-left"
      },
      "DialogTitle": {
        "description": "Dialog title",
        "classes": "text-lg font-semibold leading-none tracking-tight"
      },
      "DialogDescription": {
        "description": "Dialog description",
        "classes": "text-sm text-muted-foreground"
      },
      "DialogFooter": {
        "description": "Dialog footer for actions",
        "classes": "flex flex-col-reverse sm:flex-row sm:justify-end sm:space-x-2"
      },
      "DialogClose": {
        "description": "Close button element"
      }
    },
    "overlay": {
      "background": "black/80",
      "backdropFilter": "blur(4px)",
      "classes": "fixed inset-0 z-50 bg-black/80"
    },
    "animation": {
      "enter": "data-[state=open]:animate-in data-[state=open]:fade-in-0 data-[state=open]:zoom-in-95",
      "exit": "data-[state=closed]:animate-out data-[state=closed]:fade-out-0 data-[state=closed]:zoom-out-95"
    },
    "accessibility": {
      "trapFocus": true,
      "closeOnEscape": true,
      "ariaModal": true
    }
  },
  "Tabs": {
    "description": "Tabbed interface for organizing content",
    "components": {
      "Tabs": {
        "description": "Root tabs component",
        "classes": "w-full"
      },
      "TabsList": {
        "description": "Container for tab triggers",
        "classes": "inline-flex h-10 items-center justify-center rounded-md bg-muted p-1 text-muted-foreground"
      },
      "TabsTrigger": {
        "description": "Individual tab button",
        "classes": "inline-flex items-center justify-center whitespace-nowrap rounded-sm px-3 py-1.5 text-sm font-medium ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50",
        "activeClasses": "data-[state=active]:bg-background data-[state=active]:text-foreground data-[state=active]:shadow-sm"
      },
      "TabsContent": {
        "description": "Tab content panel",
        "classes": "mt-2 ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
      }
    },
    "variants": {
      "default": {
        "description": "Standard tabbed interface with pill-style selection"
      },
      "pills": {
        "description": "Rounded pill-style tabs",
        "listClasses": "inline-flex h-auto items-center justify-start gap-2 p-0",
        "triggerClasses": "rounded-full px-5 py-2.5",
        "activeClasses": "bg-primary text-primary-foreground shadow-lg shadow-primary/20"
      },
      "underline": {
        "description": "Underlined tabs with indicator",
        "listClasses": "inline-flex h-12 items-center justify-start gap-6 border-b border-border/50 w-full",
        "triggerClasses": "px-4 py-3 border-b-2 border-transparent",
        "activeClasses": "text-foreground font-semibold border-primary"
      },
      "cards": {
        "description": "Card-style tabs for feature selection",
        "listClasses": "grid w-full gap-3 p-0",
        "triggerClasses": "flex flex-col items-start justify-start gap-2 rounded-xl p-4 border-2",
        "activeClasses": "border-primary bg-primary/5 shadow-lg shadow-primary/10"
      }
    }
  },
  "Table": {
    "description": "Data table for displaying structured information",
    "components": {
      "Table": {
        "description": "Main table container",
        "classes": "w-full caption-bottom text-sm"
      },
      "TableHeader": {
        "description": "Table header section",
        "classes": "[&_tr]:border-b"
      },
      "TableBody": {
        "description": "Table body section",
        "classes": "[&_tr:last-child]:border-0"
      },
      "TableFooter": {
        "description": "Table footer section",
        "classes": "border-t bg-muted/50 font-medium [&>tr]:last:border-b-0"
      },
      "TableRow": {
        "description": "Table row",
        "classes": "border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted"
      },
      "TableHead": {
        "description": "Table header cell",
        "classes": "h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0"
      },
      "TableCell": {
        "description": "Table data cell",
        "classes": "p-4 align-middle [&:has([role=checkbox])]:pr-0"
      },
      "TableCaption": {
        "description": "Table caption",
        "classes": "mt-4 text-sm text-muted-foreground"
      }
    }
  },
  "Alert": {
    "description": "Alert component for important messages",
    "variants": {
      "default": {
        "background": "background",
        "border": "border",
        "color": "foreground",
        "classes": "bg-background text-foreground"
      },
      "destructive": {
        "background": "destructive/10",
        "border": "destructive/50",
        "color": "destructive",
        "classes": "border-destructive/50 text-destructive dark:border-destructive [&>svg]:text-destructive"
      },
      "warning": {
        "background": "yellow-500/10",
        "border": "yellow-500/50",
        "color": "yellow-900",
        "darkColor": "yellow-100"
      },
      "success": {
        "background": "green-500/10",
        "border": "green-500/50",
        "color": "green-900",
        "darkColor": "green-100"
      }
    },
    "components": {
      "Alert": {
        "classes": "relative w-full rounded-lg border p-4 [&>svg~*]:pl-7 [&>svg+div]:translate-y-[-3px] [&>svg]:absolute [&>svg]:left-4 [&>svg]:top-4 [&>svg]:text-foreground"
      },
      "AlertTitle": {
        "classes": "mb-1 font-medium leading-none tracking-tight"
      },
      "AlertDescription": {
        "classes": "text-sm [&_p]:leading-relaxed"
      }
    }
  },
  "Badge": {
    "description": "Badge component for labels and status indicators",
    "baseClasses": "inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2",
    "variants": {
      "default": {
        "background": "primary",
        "color": "primary-foreground",
        "border": "transparent",
        "classes": "border-transparent bg-primary text-primary-foreground hover:bg-primary/80"
      },
      "secondary": {
        "background": "secondary",
        "color": "secondary-foreground",
        "border": "transparent",
        "classes": "border-transparent bg-secondary text-secondary-foreground hover:bg-secondary/80"
      },
      "destructive": {
        "background": "destructive",
        "color": "destructive-foreground",
        "border": "transparent",
        "classes": "border-transparent bg-destructive text-destructive-foreground hover:bg-destructive/80"
      },
      "success": {
        "background": "green-500/20",
        "color": "green-400",
        "border": "green-500/50"
      },
      "warning": {
        "background": "yellow-500/20",
        "color": "yellow-600",
        "border": "yellow-500/50"
      },
      "outline": {
        "background": "transparent",
        "color": "foreground",
        "border": "border",
        "classes": "text-foreground"
      }
    }
  },
  "Checkbox": {
    "description": "Checkbox input for boolean selections",
    "properties": {
      "size": "16px",
      "borderRadius": "0.125rem",
      "border": "primary",
      "classes": "peer h-4 w-4 shrink-0 rounded-sm border border-primary ring-offset-background"
    },
    "states": {
      "checked": {
        "background": "primary",
        "color": "primary-foreground",
        "classes": "data-[state=checked]:bg-primary data-[state=checked]:text-primary-foreground"
      },
      "focus": {
        "classes": "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
      },
      "disabled": {
        "cursor": "not-allowed",
        "opacity": 0.5,
        "classes": "disabled:cursor-not-allowed disabled:opacity-50"
      }
    }
  },
  "Select": {
    "description": "Dropdown select component",
    "components": {
      "SelectTrigger": {
        "classes": "flex h-10 w-full items-center justify-between rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
      },
      "SelectContent": {
        "classes": "relative z-50 max-h-96 min-w-[8rem] overflow-hidden rounded-md border bg-popover text-popover-foreground shadow-md"
      },
      "SelectItem": {
        "classes": "relative flex w-full cursor-default select-none items-center rounded-sm py-1.5 pl-8 pr-2 text-sm outline-none focus:bg-accent focus:text-accent-foreground data-[disabled]:pointer-events-none data-[disabled]:opacity-50"
      }
    }
  },
  "Switch": {
    "description": "Toggle switch for boolean settings",
    "properties": {
      "width": "44px",
      "height": "24px",
      "thumbSize": "20px",
      "classes": "peer inline-flex h-6 w-11 shrink-0 cursor-pointer items-center rounded-full border-2 border-transparent transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 focus-visible:ring-offset-background disabled:cursor-not-allowed disabled:opacity-50"
    },
    "states": {
      "unchecked": {
        "background": "input",
        "classes": "data-[state=unchecked]:bg-input"
      },
      "checked": {
        "background": "primary",
        "classes": "data-[state=checked]:bg-primary"
      }
    },
    "thumb": {
      "classes": "pointer-events-none block h-5 w-5 rounded-full bg-background shadow-lg ring-0 transition-transform data-[state=checked]:translate-x-5 data-[state=unchecked]:translate-x-0"
    }
  },
  "Textarea": {
    "description": "Multi-line text input",
    "properties": {
      "minHeight": "80px",
      "borderRadius": "0.5rem",
      "padding": "8px 12px",
      "classes": "flex min-h-[80px] w-full rounded-lg border border-input bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
    }
  },
  "Skeleton": {
    "description": "Loading placeholder component",
    "properties": {
      "borderRadius": "0.375rem",
      "background": "muted",
      "animation": "pulse",
      "classes": "animate-pulse rounded-md bg-muted"
    }
  },
  "Sheet": {
    "description": "Sliding panel from screen edge",
    "variants": {
      "right": {
        "position": "inset-y-0 right-0",
        "size": "h-full w-3/4 sm:max-w-sm",
        "animation": "slide-in-from-right"
      },
      "left": {
        "position": "inset-y-0 left-0",
        "size": "h-full w-3/4 sm:max-w-sm",
        "animation": "slide-in-from-left"
      },
      "top": {
        "position": "inset-x-0 top-0",
        "animation": "slide-in-from-top"
      },
      "bottom": {
        "position": "inset-x-0 bottom-0",
        "animation": "slide-in-from-bottom"
      }
    },
    "components": {
      "SheetContent": {
        "classes": "fixed z-50 gap-4 bg-background p-6 shadow-lg transition ease-in-out data-[state=open]:animate-in data-[state=closed]:animate-out data-[state=closed]:duration-300 data-[state=open]:duration-500"
      },
      "SheetHeader": {
        "classes": "flex flex-col space-y-2 text-center sm:text-left"
      },
      "SheetFooter": {
        "classes": "flex flex-col-reverse sm:flex-row sm:justify-end sm:space-x-2"
      },
      "SheetTitle": {
        "classes": "text-lg font-semibold text-foreground"
      },
      "SheetDescription": {
        "classes": "text-sm text-muted-foreground"
      }
    },
    "overlay": {
      "classes": "fixed inset-0 z-50 bg-black/80"
    }
  },
  "DropdownMenu": {
    "description": "Dropdown menu for actions and navigation",
    "components": {
      "DropdownMenuContent": {
        "classes": "z-50 min-w-[8rem] overflow-hidden rounded-md border bg-popover p-1 text-popover-foreground shadow-md"
      },
      "DropdownMenuItem": {
        "classes": "relative flex cursor-default select-none items-center gap-2 rounded-sm px-2 py-1.5 text-sm outline-none transition-colors focus:bg-accent focus:text-accent-foreground data-[disabled]:pointer-events-none data-[disabled]:opacity-50"
      },
      "DropdownMenuLabel": {
        "classes": "px-2 py-1.5 text-sm font-semibold"
      },
      "DropdownMenuSeparator": {
        "classes": "-mx-1 my-1 h-px bg-muted"
      },
      "DropdownMenuShortcut": {
        "classes": "ml-auto text-xs tracking-widest opacity-60"
      }
    }
  },
  "Label": {
    "description": "Form label component",
    "properties": {
      "fontSize": "14px",
      "fontWeight": 500,
      "classes": "text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70"
    }
  },
  "Spinner": {
    "description": "Loading spinner indicator",
    "sizes": {
      "sm": {
        "size": "16px",
        "classes": "h-4 w-4"
      },
      "md": {
        "size": "24px",
        "classes": "h-6 w-6"
      },
      "lg": {
        "size": "32px",
        "classes": "h-8 w-8"
      },
      "xl": {
        "size": "48px",
        "classes": "h-12 w-12"
      }
    },
    "properties": {
      "animation": "spin 1s linear infinite",
      "borderWidth": "2px",
      "borderColor": "primary",
      "borderTopColor": "transparent"
    }
  },
  "Toast": {
    "description": "Toast notification component",
    "variants": {
      "default": {
        "background": "background",
        "border": "border"
      },
      "success": {
        "background": "green-500",
        "color": "white"
      },
      "error": {
        "background": "destructive",
        "color": "destructive-foreground"
      },
      "warning": {
        "background": "yellow-500",
        "color": "black"
      }
    },
    "properties": {
      "borderRadius": "0.5rem",
      "padding": "16px",
      "shadow": "lg",
      "position": "bottom-right"
    },
    "animation": {
      "enter": "slide-in-from-right fade-in",
      "exit": "slide-out-to-right fade-out"
    }
  }
}
