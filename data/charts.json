{
  "overview": {
    "description": "Chart components based on Recharts library with design system integration",
    "library": "recharts",
    "version": "2.x",
    "features": [
      "Responsive containers",
      "Custom tooltips with design system styling",
      "Animated transitions",
      "Dark mode support",
      "Accessibility with ARIA labels"
    ]
  },
  "commonProps": {
    "colors": {
      "description": "Chart color palette from design tokens",
      "primary": "hsl(222 79% 25%)",
      "secondary": "hsl(222 57% 49%)",
      "accent": "hsl(45 100% 50%)",
      "chart1": "#0D2872",
      "chart2": "#355EC4",
      "chart3": "#FFBE00",
      "chart4": "#2d9f7e",
      "chart5": "#f59e0b",
      "success": "#10b981",
      "warning": "#f59e0b",
      "error": "#ef4444"
    },
    "typography": {
      "fontSize": "12px",
      "fontFamily": "Inter, sans-serif",
      "tickColor": "hsl(0 0% 45%)",
      "labelColor": "hsl(0 0% 4%)"
    },
    "grid": {
      "strokeDasharray": "3 3",
      "stroke": "hsl(0 0% 90%)",
      "strokeDark": "hsl(0 0% 15%)"
    },
    "animation": {
      "duration": 300,
      "easing": "ease-out"
    }
  },
  "AreaChart": {
    "description": "Filled area chart for showing trends over time with emphasis on volume",
    "components": {
      "AreaChart": {
        "description": "Main area chart container",
        "props": {
          "data": "Array of data points",
          "margin": { "top": 10, "right": 30, "left": 0, "bottom": 0 }
        }
      },
      "Area": {
        "description": "Area fill element",
        "props": {
          "type": "monotone",
          "stroke": "var(--color-primary)",
          "fill": "url(#colorGradient)",
          "strokeWidth": 2,
          "dot": false,
          "activeDot": { "r": 6, "strokeWidth": 2 }
        }
      }
    },
    "variants": {
      "default": {
        "description": "Standard area chart with gradient fill",
        "gradient": {
          "id": "colorGradient",
          "stops": [
            { "offset": "0%", "color": "hsl(222 79% 25%)", "opacity": 0.4 },
            { "offset": "100%", "color": "hsl(222 79% 25%)", "opacity": 0.05 }
          ]
        }
      },
      "stacked": {
        "description": "Multiple stacked areas for comparison",
        "stackId": "1"
      },
      "split": {
        "description": "Area with positive/negative regions",
        "gradientPositive": "success",
        "gradientNegative": "error"
      }
    },
    "styling": {
      "container": "w-full h-[300px]",
      "classes": "rounded-lg border bg-card p-4"
    },
    "example": {
      "data": [
        { "name": "Jan", "value": 400 },
        { "name": "Feb", "value": 300 },
        { "name": "Mar", "value": 600 },
        { "name": "Apr", "value": 800 },
        { "name": "May", "value": 500 }
      ]
    }
  },
  "BarChart": {
    "description": "Bar chart for comparing discrete categories",
    "components": {
      "BarChart": {
        "description": "Main bar chart container",
        "props": {
          "data": "Array of data points",
          "margin": { "top": 20, "right": 30, "left": 20, "bottom": 5 },
          "barGap": 4,
          "barCategoryGap": "20%"
        }
      },
      "Bar": {
        "description": "Individual bar element",
        "props": {
          "fill": "var(--color-primary)",
          "radius": [4, 4, 0, 0],
          "maxBarSize": 50
        }
      }
    },
    "variants": {
      "default": {
        "description": "Vertical bars with rounded top corners",
        "radius": [4, 4, 0, 0],
        "fill": "hsl(222 79% 25%)"
      },
      "horizontal": {
        "description": "Horizontal bar chart",
        "layout": "vertical",
        "radius": [0, 4, 4, 0]
      },
      "grouped": {
        "description": "Multiple bars per category",
        "barGap": 2
      },
      "stacked": {
        "description": "Stacked bars showing composition",
        "stackId": "stack"
      }
    },
    "states": {
      "hover": {
        "fill": "hsl(222 79% 35%)",
        "cursor": "pointer"
      },
      "active": {
        "fill": "hsl(222 79% 20%)"
      }
    },
    "styling": {
      "container": "w-full h-[300px]",
      "classes": "rounded-lg border bg-card p-4"
    },
    "example": {
      "data": [
        { "name": "Product A", "sales": 4000, "revenue": 2400 },
        { "name": "Product B", "sales": 3000, "revenue": 1398 },
        { "name": "Product C", "sales": 2000, "revenue": 9800 },
        { "name": "Product D", "sales": 2780, "revenue": 3908 }
      ]
    }
  },
  "LineChart": {
    "description": "Line chart for showing trends and continuous data",
    "components": {
      "LineChart": {
        "description": "Main line chart container",
        "props": {
          "data": "Array of data points",
          "margin": { "top": 5, "right": 30, "left": 20, "bottom": 5 }
        }
      },
      "Line": {
        "description": "Line element",
        "props": {
          "type": "monotone",
          "stroke": "var(--color-primary)",
          "strokeWidth": 2,
          "dot": { "r": 4, "strokeWidth": 2 },
          "activeDot": { "r": 6, "strokeWidth": 2 }
        }
      }
    },
    "variants": {
      "default": {
        "description": "Smooth curved line",
        "type": "monotone",
        "strokeWidth": 2
      },
      "linear": {
        "description": "Straight line segments",
        "type": "linear"
      },
      "stepped": {
        "description": "Step-wise line",
        "type": "stepAfter"
      },
      "dashed": {
        "description": "Dashed line for projections",
        "strokeDasharray": "5 5"
      },
      "multiLine": {
        "description": "Multiple lines for comparison",
        "colors": ["chart1", "chart2", "chart3"]
      }
    },
    "markers": {
      "dot": {
        "default": { "r": 4, "fill": "background", "stroke": "primary", "strokeWidth": 2 },
        "active": { "r": 6, "fill": "primary", "stroke": "background", "strokeWidth": 2 }
      },
      "referenceLine": {
        "stroke": "muted",
        "strokeDasharray": "3 3",
        "label": { "fill": "muted-foreground", "fontSize": 12 }
      }
    },
    "styling": {
      "container": "w-full h-[300px]",
      "classes": "rounded-lg border bg-card p-4"
    },
    "example": {
      "data": [
        { "month": "Jan", "users": 400, "sessions": 240 },
        { "month": "Feb", "users": 300, "sessions": 139 },
        { "month": "Mar", "users": 200, "sessions": 980 },
        { "month": "Apr", "users": 278, "sessions": 390 },
        { "month": "May", "users": 189, "sessions": 480 }
      ]
    }
  },
  "PieChart": {
    "description": "Pie/Donut chart for showing proportions and composition",
    "components": {
      "PieChart": {
        "description": "Main pie chart container",
        "props": {
          "margin": { "top": 0, "right": 0, "left": 0, "bottom": 0 }
        }
      },
      "Pie": {
        "description": "Pie element",
        "props": {
          "data": "Array of data points",
          "cx": "50%",
          "cy": "50%",
          "innerRadius": 0,
          "outerRadius": 80,
          "paddingAngle": 2,
          "dataKey": "value"
        }
      },
      "Cell": {
        "description": "Individual pie segment",
        "props": {
          "fill": "Mapped from color palette"
        }
      }
    },
    "variants": {
      "default": {
        "description": "Standard pie chart",
        "innerRadius": 0,
        "outerRadius": "80%"
      },
      "donut": {
        "description": "Donut chart with center hole",
        "innerRadius": "60%",
        "outerRadius": "80%"
      },
      "halfDonut": {
        "description": "Semi-circle donut",
        "startAngle": 180,
        "endAngle": 0,
        "innerRadius": "60%",
        "outerRadius": "80%"
      },
      "nested": {
        "description": "Nested rings for hierarchical data",
        "rings": [
          { "innerRadius": "20%", "outerRadius": "40%" },
          { "innerRadius": "50%", "outerRadius": "70%" }
        ]
      }
    },
    "label": {
      "inside": {
        "position": "inside",
        "fill": "white",
        "fontSize": 12,
        "fontWeight": 600
      },
      "outside": {
        "position": "outside",
        "fill": "foreground",
        "fontSize": 12
      },
      "line": {
        "stroke": "muted",
        "strokeWidth": 1
      }
    },
    "centerLabel": {
      "description": "Label in center of donut chart",
      "styling": {
        "container": "absolute inset-0 flex flex-col items-center justify-center",
        "value": "text-3xl font-bold",
        "label": "text-sm text-muted-foreground"
      }
    },
    "styling": {
      "container": "w-full h-[300px] relative",
      "classes": "rounded-lg border bg-card p-4"
    },
    "example": {
      "data": [
        { "name": "Desktop", "value": 400 },
        { "name": "Mobile", "value": 300 },
        { "name": "Tablet", "value": 200 },
        { "name": "Other", "value": 100 }
      ]
    }
  },
  "RadialBarChart": {
    "description": "Radial bar chart for showing progress or comparisons in circular form",
    "components": {
      "RadialBarChart": {
        "description": "Main radial bar chart container",
        "props": {
          "cx": "50%",
          "cy": "50%",
          "innerRadius": "10%",
          "outerRadius": "80%",
          "barSize": 10,
          "startAngle": 90,
          "endAngle": -270
        }
      },
      "RadialBar": {
        "description": "Radial bar element",
        "props": {
          "background": { "fill": "hsl(0 0% 96%)" },
          "dataKey": "value",
          "cornerRadius": 5
        }
      }
    },
    "variants": {
      "default": {
        "description": "Standard radial bars",
        "barSize": 10
      },
      "progress": {
        "description": "Single progress indicator",
        "barSize": 15,
        "background": true
      }
    },
    "styling": {
      "container": "w-full h-[300px]",
      "classes": "rounded-lg border bg-card p-4"
    }
  },
  "ComposedChart": {
    "description": "Combined chart with multiple chart types (bars + lines)",
    "components": {
      "ComposedChart": {
        "description": "Main composed chart container"
      }
    },
    "combinations": {
      "barLine": {
        "description": "Bars with line overlay",
        "primary": "Bar",
        "secondary": "Line"
      },
      "areaLine": {
        "description": "Area with line overlay",
        "primary": "Area",
        "secondary": "Line"
      }
    },
    "styling": {
      "container": "w-full h-[300px]",
      "classes": "rounded-lg border bg-card p-4"
    }
  },
  "sharedComponents": {
    "ResponsiveContainer": {
      "description": "Wrapper for responsive chart sizing",
      "props": {
        "width": "100%",
        "height": "number or '100%'"
      },
      "usage": "Always wrap charts in ResponsiveContainer for responsive behavior"
    },
    "XAxis": {
      "description": "Horizontal axis",
      "props": {
        "dataKey": "Key for x-axis values",
        "stroke": "hsl(0 0% 45%)",
        "fontSize": 12,
        "tickLine": false,
        "axisLine": false
      },
      "styling": {
        "tick": { "fill": "muted-foreground", "fontSize": 12 },
        "label": { "fill": "foreground", "fontSize": 14, "fontWeight": 500 }
      }
    },
    "YAxis": {
      "description": "Vertical axis",
      "props": {
        "stroke": "hsl(0 0% 45%)",
        "fontSize": 12,
        "tickLine": false,
        "axisLine": false,
        "tickFormatter": "Optional formatter function"
      },
      "styling": {
        "tick": { "fill": "muted-foreground", "fontSize": 12 },
        "label": { "fill": "foreground", "fontSize": 14, "fontWeight": 500 }
      }
    },
    "CartesianGrid": {
      "description": "Background grid lines",
      "props": {
        "strokeDasharray": "3 3",
        "stroke": "hsl(0 0% 90%)",
        "vertical": false
      },
      "darkMode": {
        "stroke": "hsl(0 0% 15%)"
      }
    },
    "Tooltip": {
      "description": "Hover tooltip for data points",
      "props": {
        "cursor": { "fill": "hsl(0 0% 96%)" },
        "contentStyle": {
          "backgroundColor": "hsl(var(--card))",
          "border": "1px solid hsl(var(--border))",
          "borderRadius": "0.5rem",
          "padding": "12px",
          "boxShadow": "0 4px 6px -1px rgb(0 0 0 / 0.1)"
        },
        "labelStyle": {
          "color": "hsl(var(--foreground))",
          "fontWeight": 600,
          "marginBottom": "4px"
        },
        "itemStyle": {
          "color": "hsl(var(--muted-foreground))",
          "fontSize": "14px"
        }
      },
      "customContent": {
        "description": "Custom tooltip component styling",
        "classes": "rounded-lg border bg-card p-3 shadow-lg",
        "labelClasses": "font-semibold text-foreground mb-1",
        "valueClasses": "text-sm text-muted-foreground"
      }
    },
    "Legend": {
      "description": "Chart legend",
      "props": {
        "verticalAlign": "bottom",
        "height": 36,
        "iconType": "circle",
        "iconSize": 8
      },
      "styling": {
        "container": "flex flex-wrap justify-center gap-4 pt-4",
        "item": "flex items-center gap-2 text-sm text-muted-foreground",
        "icon": "h-2 w-2 rounded-full"
      }
    },
    "ReferenceLine": {
      "description": "Reference/threshold line",
      "props": {
        "stroke": "hsl(0 0% 45%)",
        "strokeDasharray": "3 3",
        "label": { "fill": "muted-foreground", "fontSize": 12 }
      },
      "variants": {
        "target": { "stroke": "hsl(38 92% 50%)", "strokeWidth": 2 },
        "average": { "stroke": "hsl(0 0% 45%)", "strokeDasharray": "5 5" },
        "threshold": { "stroke": "hsl(0 84% 60%)", "strokeDasharray": "3 3" }
      }
    }
  },
  "ChartCard": {
    "description": "Card wrapper component for charts with header and actions",
    "components": {
      "ChartCard": {
        "classes": "rounded-lg border bg-card shadow-sm"
      },
      "ChartCardHeader": {
        "classes": "flex items-center justify-between p-6 pb-2"
      },
      "ChartCardTitle": {
        "classes": "text-lg font-semibold tracking-tight"
      },
      "ChartCardDescription": {
        "classes": "text-sm text-muted-foreground"
      },
      "ChartCardContent": {
        "classes": "p-6 pt-0"
      },
      "ChartCardActions": {
        "classes": "flex items-center gap-2"
      }
    },
    "features": {
      "dateRangeSelector": {
        "description": "Dropdown for selecting date range",
        "options": ["7 days", "30 days", "90 days", "12 months", "Custom"]
      },
      "exportButton": {
        "description": "Export chart data",
        "formats": ["PNG", "SVG", "CSV"]
      },
      "fullscreenToggle": {
        "description": "Expand chart to fullscreen"
      }
    }
  },
  "sparkline": {
    "description": "Mini inline charts for compact data visualization",
    "variants": {
      "line": {
        "height": 32,
        "strokeWidth": 1.5,
        "dot": false
      },
      "area": {
        "height": 32,
        "strokeWidth": 1.5,
        "fillOpacity": 0.2
      },
      "bar": {
        "height": 32,
        "barSize": 4,
        "gap": 1
      }
    },
    "usage": "MetricCard trends, table cells, inline indicators",
    "styling": {
      "container": "h-8 w-24",
      "positive": { "stroke": "hsl(160 84% 39%)", "fill": "hsl(160 84% 39% / 0.2)" },
      "negative": { "stroke": "hsl(0 84% 60%)", "fill": "hsl(0 84% 60% / 0.2)" },
      "neutral": { "stroke": "hsl(0 0% 45%)", "fill": "hsl(0 0% 45% / 0.2)" }
    }
  },
  "accessibility": {
    "description": "Chart accessibility guidelines",
    "requirements": {
      "ariaLabel": "Descriptive label for the chart",
      "ariaDescribedBy": "ID of element with detailed description",
      "role": "img for static charts, application for interactive"
    },
    "dataTable": {
      "description": "Provide data table alternative for screen readers",
      "classes": "sr-only"
    },
    "colorBlindSafe": {
      "description": "Use patterns in addition to colors",
      "patterns": ["solid", "dashed", "dotted", "striped"]
    },
    "focusIndicators": {
      "description": "Visible focus states for interactive elements",
      "ring": "2px solid hsl(222 79% 25%)"
    }
  },
  "emptyState": {
    "description": "Empty state when no data available",
    "styling": {
      "container": "flex flex-col items-center justify-center h-[300px] text-center",
      "icon": "h-12 w-12 text-muted-foreground/50 mb-4",
      "title": "text-lg font-medium text-foreground mb-1",
      "description": "text-sm text-muted-foreground"
    },
    "content": {
      "icon": "BarChart3 or similar",
      "title": "No data available",
      "description": "Data will appear here once available"
    }
  },
  "loadingState": {
    "description": "Loading skeleton for charts",
    "styling": {
      "container": "h-[300px] w-full",
      "skeleton": "animate-pulse rounded-lg bg-muted"
    },
    "variants": {
      "bar": "Multiple vertical skeleton bars",
      "line": "Wavy skeleton line",
      "pie": "Circular skeleton"
    }
  }
}
