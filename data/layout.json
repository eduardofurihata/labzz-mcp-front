{
  "grid": {
    "description": "Grid system for page layouts",
    "container": {
      "maxWidth": "1280px",
      "padding": "1.5rem",
      "centered": true,
      "classes": "mx-auto max-w-7xl px-6"
    },
    "columns": {
      "1": "grid-cols-1",
      "2": "grid-cols-2",
      "3": "grid-cols-3",
      "4": "grid-cols-4",
      "6": "grid-cols-6",
      "12": "grid-cols-12"
    },
    "gaps": {
      "sm": "gap-2",
      "md": "gap-4",
      "lg": "gap-6",
      "xl": "gap-8"
    },
    "responsive": {
      "description": "Mobile-first responsive grid patterns",
      "patterns": {
        "cards2to4": "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6",
        "cards1to3": "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6",
        "sidebar": "grid grid-cols-1 lg:grid-cols-[280px_1fr] gap-6",
        "contentWithAside": "grid grid-cols-1 lg:grid-cols-[1fr_300px] gap-8"
      }
    }
  },
  "flexbox": {
    "description": "Flexbox utilities for component layouts",
    "patterns": {
      "row": "flex flex-row",
      "column": "flex flex-col",
      "center": "flex items-center justify-center",
      "between": "flex items-center justify-between",
      "start": "flex items-start",
      "end": "flex items-end justify-end",
      "wrap": "flex flex-wrap"
    },
    "gaps": {
      "sm": "gap-2",
      "md": "gap-4",
      "lg": "gap-6"
    }
  },
  "navigation": {
    "sidebar": {
      "description": "Side navigation panel",
      "width": {
        "collapsed": "64px",
        "expanded": "280px"
      },
      "structure": {
        "header": {
          "height": "64px",
          "classes": "flex h-16 items-center border-b px-4"
        },
        "nav": {
          "classes": "flex-1 overflow-auto py-4"
        },
        "footer": {
          "classes": "border-t p-4"
        }
      },
      "item": {
        "height": "40px",
        "padding": "8px 12px",
        "borderRadius": "6px",
        "classes": "flex items-center gap-3 rounded-md px-3 py-2 text-sm font-medium transition-colors",
        "states": {
          "default": "text-muted-foreground hover:bg-accent hover:text-accent-foreground",
          "active": "bg-accent text-accent-foreground"
        }
      }
    },
    "header": {
      "description": "Top navigation bar",
      "height": "64px",
      "classes": "sticky top-0 z-sticky flex h-16 items-center border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60",
      "structure": {
        "logo": {
          "classes": "flex items-center gap-2"
        },
        "nav": {
          "classes": "hidden md:flex items-center gap-6"
        },
        "actions": {
          "classes": "flex items-center gap-4"
        }
      }
    },
    "breadcrumbs": {
      "description": "Breadcrumb navigation",
      "classes": "flex items-center gap-2 text-sm text-muted-foreground",
      "separator": {
        "icon": "ChevronRight",
        "classes": "h-4 w-4"
      },
      "item": {
        "default": "hover:text-foreground transition-colors",
        "current": "text-foreground font-medium"
      }
    },
    "tabs": {
      "description": "Tab navigation within pages",
      "classes": "border-b border-border",
      "item": {
        "classes": "px-4 py-2 -mb-px border-b-2 border-transparent text-muted-foreground hover:text-foreground transition-colors",
        "active": "border-primary text-foreground font-medium"
      }
    }
  },
  "pageStructure": {
    "dashboard": {
      "description": "Dashboard page layout with sidebar",
      "structure": {
        "layout": "flex min-h-screen",
        "sidebar": "hidden lg:flex w-64 flex-col border-r bg-card",
        "main": "flex-1 flex flex-col",
        "header": "sticky top-0 z-10 border-b bg-background",
        "content": "flex-1 p-6"
      }
    },
    "landing": {
      "description": "Landing page layout",
      "structure": {
        "layout": "flex flex-col min-h-screen",
        "header": "sticky top-0 z-50 bg-background/95 backdrop-blur border-b",
        "main": "flex-1",
        "footer": "border-t bg-muted/50"
      },
      "sections": {
        "hero": {
          "classes": "py-20 md:py-32",
          "container": "container mx-auto px-6 text-center"
        },
        "features": {
          "classes": "py-16 md:py-24",
          "container": "container mx-auto px-6"
        },
        "cta": {
          "classes": "py-16 md:py-24 bg-primary text-primary-foreground"
        }
      }
    },
    "form": {
      "description": "Form page layout",
      "structure": {
        "container": "mx-auto max-w-2xl py-8 px-6",
        "header": "mb-8",
        "content": "space-y-6",
        "actions": "flex items-center justify-end gap-4 pt-6 border-t"
      }
    },
    "settings": {
      "description": "Settings page layout",
      "structure": {
        "container": "container mx-auto py-8 px-6",
        "sidebar": "w-64 space-y-1",
        "content": "flex-1 space-y-6"
      }
    }
  },
  "sections": {
    "description": "Common section patterns",
    "header": {
      "description": "Page section header",
      "classes": "mb-6",
      "title": "text-2xl font-bold tracking-tight",
      "description": "text-muted-foreground mt-1"
    },
    "content": {
      "padding": {
        "sm": "p-4",
        "md": "p-6",
        "lg": "p-8"
      }
    },
    "divider": {
      "horizontal": "border-t border-border my-6",
      "vertical": "border-l border-border mx-4 h-full"
    }
  },
  "responsive": {
    "breakpoints": {
      "sm": {
        "value": "640px",
        "description": "Small devices (phones in landscape)"
      },
      "md": {
        "value": "768px",
        "description": "Medium devices (tablets)"
      },
      "lg": {
        "value": "1024px",
        "description": "Large devices (desktops)"
      },
      "xl": {
        "value": "1280px",
        "description": "Extra large devices (large desktops)"
      },
      "2xl": {
        "value": "1536px",
        "description": "2X large devices (wide screens)"
      }
    },
    "patterns": {
      "hideOnMobile": "hidden md:block",
      "showOnMobile": "md:hidden",
      "stackOnMobile": "flex flex-col md:flex-row",
      "fullWidthOnMobile": "w-full md:w-auto"
    }
  },
  "spacing": {
    "pageMargin": {
      "mobile": "1rem",
      "tablet": "1.5rem",
      "desktop": "2rem"
    },
    "sectionGap": {
      "sm": "2rem",
      "md": "4rem",
      "lg": "6rem"
    },
    "componentGap": {
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem"
    }
  },
  "responsivePatterns": {
    "_description": "Detailed responsive patterns based on labzz-lp-vendas reference",
    "typography": {
      "heroTitle": {
        "classes": "text-5xl md:text-7xl lg:text-8xl",
        "description": "Main hero headline - dramatic size scaling"
      },
      "sectionTitle": {
        "classes": "text-2xl md:text-4xl lg:text-5xl",
        "description": "Section headings"
      },
      "cardTitle": {
        "classes": "text-lg sm:text-xl md:text-2xl",
        "description": "Card/item titles"
      },
      "cardDescription": {
        "classes": "text-xs sm:text-sm",
        "description": "Card descriptions and secondary text"
      },
      "price": {
        "classes": "text-2xl sm:text-3xl md:text-4xl",
        "description": "Pricing display"
      },
      "body": {
        "classes": "text-base md:text-lg",
        "description": "Body text"
      },
      "small": {
        "classes": "text-xs sm:text-sm",
        "description": "Small text, captions"
      }
    },
    "padding": {
      "card": {
        "classes": "p-4 sm:p-6",
        "description": "Card internal padding"
      },
      "section": {
        "classes": "py-12 sm:py-16 md:py-20 lg:py-24",
        "description": "Section vertical padding"
      },
      "container": {
        "classes": "px-4 sm:px-6 lg:px-8",
        "description": "Container horizontal padding"
      },
      "button": {
        "classes": "py-2.5 sm:py-3 px-4 sm:px-6",
        "description": "Button padding"
      },
      "input": {
        "classes": "px-3 py-2 sm:px-4 sm:py-2.5",
        "description": "Input field padding"
      }
    },
    "borderRadius": {
      "card": {
        "classes": "rounded-xl sm:rounded-2xl",
        "description": "Card border radius - more rounded on larger screens"
      },
      "button": {
        "classes": "rounded-lg",
        "description": "Button border radius"
      },
      "badge": {
        "classes": "rounded-full",
        "description": "Badge border radius"
      }
    },
    "grid": {
      "cards4": {
        "classes": "grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4",
        "description": "4-column card grid with responsive breakpoints"
      },
      "cards3": {
        "classes": "grid-cols-1 md:grid-cols-2 lg:grid-cols-3",
        "description": "3-column card grid"
      },
      "cards2": {
        "classes": "grid-cols-1 md:grid-cols-2",
        "description": "2-column card grid"
      },
      "stats": {
        "classes": "grid-cols-2 md:grid-cols-4",
        "description": "Stats display - 2 on mobile, 4 on desktop"
      },
      "gap": {
        "cards": "gap-4 sm:gap-6",
        "sections": "gap-6 md:gap-8"
      }
    },
    "spacing": {
      "cardGap": {
        "classes": "space-y-2 sm:space-y-3",
        "description": "Vertical spacing between card items"
      },
      "sectionMargin": {
        "classes": "mb-8 sm:mb-12 md:mb-16",
        "description": "Section bottom margin"
      },
      "elementGap": {
        "classes": "gap-1 sm:gap-2",
        "description": "Small element gaps"
      }
    },
    "icons": {
      "small": {
        "classes": "w-4 h-4 sm:w-5 sm:h-5",
        "description": "Small icons with responsive sizing"
      },
      "medium": {
        "classes": "w-5 h-5 sm:w-6 sm:h-6",
        "description": "Medium icons"
      },
      "large": {
        "classes": "w-6 h-6 sm:w-8 sm:h-8",
        "description": "Large icons"
      }
    },
    "badge": {
      "classes": "px-2 sm:px-3 py-0.5 sm:py-1 text-[10px] sm:text-xs",
      "description": "Badge sizing"
    }
  }
}
