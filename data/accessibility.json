{
  "colorContrast": {
    "description": "WCAG 2.1 color contrast requirements",
    "levels": {
      "AA": {
        "normalText": "4.5:1",
        "largeText": "3:1",
        "uiComponents": "3:1"
      },
      "AAA": {
        "normalText": "7:1",
        "largeText": "4.5:1"
      }
    },
    "largeTextDefinition": {
      "regular": "18px (1.125rem)",
      "bold": "14px (0.875rem)"
    },
    "colorPairs": {
      "primary": {
        "background": "#0D2872",
        "foreground": "#fafafa",
        "ratio": "12.4:1",
        "passes": "AAA"
      },
      "secondary": {
        "background": "#355EC4",
        "foreground": "#fafafa",
        "ratio": "5.2:1",
        "passes": "AA"
      },
      "accent": {
        "background": "#FFBE00",
        "foreground": "#171717",
        "ratio": "10.8:1",
        "passes": "AAA"
      },
      "destructive": {
        "background": "#f75951",
        "foreground": "#fafafa",
        "ratio": "4.5:1",
        "passes": "AA"
      }
    },
    "doNotUse": {
      "description": "Color combinations to avoid",
      "examples": [
        "Light gray text on white background",
        "Red text on green background",
        "Blue text on purple background"
      ]
    }
  },
  "focusManagement": {
    "description": "Focus state guidelines",
    "visibleFocus": {
      "required": true,
      "style": {
        "ring": "2px solid",
        "ringColor": "ring (primary)",
        "offset": "2px"
      },
      "classes": "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
    },
    "focusOrder": {
      "description": "Logical focus order following visual layout",
      "guidelines": [
        "Use natural DOM order when possible",
        "Avoid positive tabindex values",
        "Group related elements"
      ]
    },
    "focusTrap": {
      "description": "Keep focus within modal dialogs",
      "applies": ["Modal", "Dialog", "Sheet", "Drawer"]
    },
    "skipLinks": {
      "description": "Skip to main content link",
      "implementation": {
        "position": "First focusable element",
        "visibility": "Visible on focus",
        "target": "Main content area"
      }
    }
  },
  "touchTargets": {
    "description": "Minimum touch target sizes",
    "minimum": {
      "value": "44px",
      "description": "WCAG 2.1 Level AAA / Apple HIG"
    },
    "recommended": {
      "value": "48px",
      "description": "Material Design / Android"
    },
    "spacing": {
      "minimum": "8px",
      "description": "Minimum space between touch targets"
    },
    "exceptions": {
      "description": "Inline links can be smaller",
      "requirement": "Provide alternative larger target nearby"
    }
  },
  "screenReaders": {
    "ariaLabels": {
      "description": "ARIA label guidelines",
      "patterns": {
        "buttons": {
          "iconOnly": "Requires aria-label",
          "example": "<button aria-label=\"Close\">"
        },
        "inputs": {
          "labelRequired": true,
          "errorDescription": "aria-describedby for error messages"
        },
        "images": {
          "decorative": "alt=\"\" or aria-hidden=\"true\"",
          "meaningful": "Descriptive alt text"
        }
      }
    },
    "liveRegions": {
      "description": "Announce dynamic content changes",
      "types": {
        "polite": {
          "usage": "Non-urgent updates",
          "attribute": "aria-live=\"polite\""
        },
        "assertive": {
          "usage": "Urgent updates (errors)",
          "attribute": "aria-live=\"assertive\""
        }
      },
      "applications": [
        "Form validation errors",
        "Toast notifications",
        "Loading states",
        "Content updates"
      ]
    },
    "landmarks": {
      "description": "Page landmarks for navigation",
      "required": [
        { "role": "banner", "element": "header", "usage": "Site header" },
        { "role": "main", "element": "main", "usage": "Main content" },
        { "role": "navigation", "element": "nav", "usage": "Navigation areas" },
        { "role": "contentinfo", "element": "footer", "usage": "Site footer" }
      ]
    },
    "headingStructure": {
      "description": "Proper heading hierarchy",
      "guidelines": [
        "One h1 per page",
        "Don't skip heading levels",
        "Use headings for structure, not styling"
      ]
    }
  },
  "keyboard": {
    "description": "Keyboard accessibility requirements",
    "essentialKeys": {
      "Tab": "Move focus forward",
      "Shift+Tab": "Move focus backward",
      "Enter": "Activate buttons, links",
      "Space": "Activate buttons, toggle checkboxes",
      "Escape": "Close modals, cancel actions",
      "Arrow keys": "Navigate within components"
    },
    "components": {
      "Button": {
        "enter": "Activate",
        "space": "Activate"
      },
      "Checkbox": {
        "space": "Toggle"
      },
      "Select": {
        "enter": "Open/select",
        "space": "Open",
        "arrows": "Navigate options",
        "escape": "Close"
      },
      "Tabs": {
        "arrows": "Switch tabs",
        "home": "First tab",
        "end": "Last tab"
      },
      "Menu": {
        "arrows": "Navigate items",
        "enter": "Select item",
        "escape": "Close"
      },
      "Modal": {
        "escape": "Close",
        "tab": "Cycle within (trapped)"
      }
    },
    "visualFeedback": {
      "description": "Keyboard focus must be visible",
      "neverHide": "Never hide focus outline for keyboard users",
      "classes": "focus-visible (not :focus)"
    }
  },
  "motion": {
    "description": "Respect user motion preferences",
    "mediaQuery": "prefers-reduced-motion: reduce",
    "implementation": {
      "css": {
        "selector": "@media (prefers-reduced-motion: reduce)",
        "rules": "Disable or minimize animations"
      },
      "tailwind": "motion-reduce:transition-none motion-reduce:animate-none"
    },
    "exceptions": {
      "description": "Essential animations can be simplified",
      "examples": ["Loading spinners (slow down)", "Progress indicators"]
    }
  },
  "forms": {
    "labels": {
      "required": true,
      "association": "for/id or wrapping",
      "placeholder": "Not a replacement for labels"
    },
    "errors": {
      "association": "aria-describedby",
      "announcement": "aria-live for dynamic errors",
      "visual": "Icon + color + text (not color alone)"
    },
    "required": {
      "indicator": "aria-required=\"true\"",
      "visual": "Asterisk (*) with legend"
    },
    "grouping": {
      "fieldset": "Group related fields",
      "legend": "Describe the group"
    },
    "autocomplete": {
      "description": "Enable browser autocomplete",
      "attribute": "autocomplete",
      "values": {
        "name": "name",
        "email": "email",
        "phone": "tel",
        "address": "street-address",
        "postalCode": "postal-code"
      }
    }
  },
  "images": {
    "altText": {
      "meaningful": {
        "description": "Images that convey information",
        "requirement": "Descriptive alt text"
      },
      "decorative": {
        "description": "Images that are purely decorative",
        "requirement": "Empty alt=\"\" or aria-hidden=\"true\""
      },
      "complex": {
        "description": "Charts, infographics",
        "requirement": "Extended description via aria-describedby"
      }
    },
    "textInImages": {
      "avoid": true,
      "exception": "Logos",
      "reason": "Cannot be resized, translated, or read by screen readers"
    }
  },
  "testing": {
    "tools": [
      {
        "name": "axe DevTools",
        "type": "Browser extension",
        "usage": "Automated accessibility testing"
      },
      {
        "name": "WAVE",
        "type": "Browser extension",
        "usage": "Visual accessibility feedback"
      },
      {
        "name": "Lighthouse",
        "type": "Chrome DevTools",
        "usage": "Accessibility audit"
      },
      {
        "name": "NVDA",
        "type": "Screen reader (Windows)",
        "usage": "Manual testing"
      },
      {
        "name": "VoiceOver",
        "type": "Screen reader (macOS/iOS)",
        "usage": "Manual testing"
      }
    ],
    "checklist": [
      "Keyboard navigation works for all interactions",
      "Focus is visible and logical",
      "All images have appropriate alt text",
      "Color is not the only indicator",
      "Text can be resized to 200% without loss",
      "Forms have proper labels and error handling",
      "Page has proper heading structure",
      "Dynamic content changes are announced"
    ]
  }
}
