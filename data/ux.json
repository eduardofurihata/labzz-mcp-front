{
  "interactions": {
    "hover": {
      "description": "Hover state guidelines",
      "timing": "150ms",
      "easing": "ease-in-out",
      "effects": {
        "colorChange": {
          "description": "Subtle color shift on interactive elements",
          "example": "hover:bg-accent",
          "classes": "hover:bg-accent/10 transition-colors duration-150"
        },
        "elevation": {
          "description": "Add shadow on hover for cards",
          "example": "hover:shadow-md",
          "classes": "hover:shadow-md transition-shadow duration-150"
        },
        "scale": {
          "description": "Subtle scale for clickable items",
          "example": "hover:scale-[1.02]",
          "classes": "hover:scale-[1.02] transition-transform duration-150"
        },
        "brightness": {
          "description": "Brighten images on hover",
          "classes": "hover:brightness-110 transition-[filter] duration-150"
        },
        "translate": {
          "description": "Subtle movement on hover",
          "classes": "hover:-translate-y-1 transition-transform duration-150"
        }
      }
    },
    "focus": {
      "description": "Focus state for accessibility",
      "ring": {
        "width": "2px",
        "color": "ring (primary)",
        "offset": "2px"
      },
      "classes": "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2",
      "skipLink": {
        "description": "Skip to main content link for keyboard users",
        "classes": "sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-background focus:px-4 focus:py-2 focus:rounded-md focus:ring-2 focus:ring-ring"
      }
    },
    "active": {
      "description": "Active/pressed state",
      "effects": {
        "darken": "Slightly darker background",
        "scale": "scale-[0.98]"
      },
      "classes": "active:scale-[0.98] active:bg-primary/80 transition-all duration-75"
    },
    "disabled": {
      "description": "Disabled state guidelines",
      "opacity": 0.5,
      "cursor": "not-allowed",
      "classes": "opacity-50 cursor-not-allowed pointer-events-none",
      "ariaAttributes": {
        "ariaDisabled": "true",
        "tabIndex": "-1"
      }
    },
    "loading": {
      "description": "Loading state indicators",
      "patterns": {
        "spinner": {
          "description": "Animated spinner icon",
          "usage": "Buttons, async actions",
          "sizes": {
            "xs": "h-3 w-3",
            "sm": "h-4 w-4",
            "md": "h-6 w-6",
            "lg": "h-8 w-8"
          },
          "classes": "animate-spin"
        },
        "skeleton": {
          "description": "Placeholder shapes with pulse animation",
          "usage": "Content loading",
          "classes": "animate-pulse bg-muted rounded-md",
          "variants": {
            "text": "h-4 w-full rounded",
            "avatar": "h-10 w-10 rounded-full",
            "card": "h-[200px] w-full rounded-lg",
            "button": "h-10 w-24 rounded-md"
          }
        },
        "progress": {
          "description": "Progress bar for determinate loading",
          "usage": "File uploads, multi-step processes",
          "classes": "h-2 bg-muted rounded-full overflow-hidden",
          "barClasses": "h-full bg-primary transition-all duration-300"
        },
        "overlay": {
          "description": "Semi-transparent overlay with spinner",
          "usage": "Full page or section loading",
          "classes": "absolute inset-0 bg-background/80 backdrop-blur-sm flex items-center justify-center z-50"
        },
        "shimmer": {
          "description": "Shimmer effect for loading cards",
          "classes": "relative overflow-hidden before:absolute before:inset-0 before:-translate-x-full before:animate-shimmer before:bg-gradient-to-r before:from-transparent before:via-white/20 before:to-transparent"
        }
      }
    },
    "drag": {
      "description": "Drag interaction patterns",
      "cursor": {
        "grab": "cursor-grab",
        "grabbing": "cursor-grabbing"
      },
      "feedback": {
        "dragging": "opacity-50 scale-105 shadow-xl z-50",
        "dropTarget": "ring-2 ring-primary ring-dashed bg-primary/5"
      }
    },
    "swipe": {
      "description": "Touch swipe patterns for mobile",
      "threshold": "50px",
      "actions": {
        "dismiss": "Swipe left/right to dismiss",
        "reveal": "Swipe to reveal actions",
        "navigate": "Swipe to navigate carousel"
      }
    }
  },
  "feedback": {
    "success": {
      "description": "Positive feedback",
      "color": "green-500",
      "icon": "CheckCircle",
      "patterns": {
        "toast": {
          "description": "Brief success message",
          "duration": "3000ms",
          "position": "bottom-right",
          "classes": "bg-green-500 text-white"
        },
        "inline": {
          "description": "Inline success state with icon",
          "classes": "text-green-600 flex items-center gap-2"
        },
        "modal": {
          "description": "Success confirmation dialog",
          "iconSize": "h-12 w-12",
          "iconClasses": "text-green-500 mx-auto mb-4"
        },
        "checkmark": {
          "description": "Animated checkmark",
          "animation": "scale-in with draw effect"
        }
      }
    },
    "error": {
      "description": "Error feedback",
      "color": "destructive",
      "icon": "AlertCircle",
      "patterns": {
        "toast": {
          "description": "Error notification",
          "duration": "5000ms",
          "persistent": true,
          "classes": "bg-destructive text-destructive-foreground"
        },
        "inline": {
          "description": "Form field error message",
          "classes": "text-destructive text-sm mt-1 flex items-center gap-1"
        },
        "alert": {
          "description": "Prominent error banner",
          "classes": "bg-destructive/10 border border-destructive/50 text-destructive p-4 rounded-lg"
        },
        "shake": {
          "description": "Shake animation for invalid input",
          "classes": "animate-shake",
          "keyframes": "translateX(-10px) -> translateX(10px) -> translateX(0)"
        }
      },
      "messages": {
        "required": "This field is required",
        "email": "Please enter a valid email address",
        "minLength": "Must be at least {min} characters",
        "maxLength": "Must be no more than {max} characters",
        "pattern": "Invalid format",
        "network": "Unable to connect. Please check your internet connection.",
        "server": "Something went wrong. Please try again later.",
        "notFound": "The requested resource was not found.",
        "unauthorized": "Please sign in to continue.",
        "forbidden": "You don't have permission to perform this action."
      }
    },
    "warning": {
      "description": "Warning feedback",
      "color": "yellow-500",
      "icon": "AlertTriangle",
      "usage": "Potentially destructive actions, data loss warnings",
      "patterns": {
        "confirmation": {
          "description": "Confirm before destructive action",
          "title": "Are you sure?",
          "confirmButton": "destructive variant",
          "cancelButton": "outline variant"
        },
        "banner": {
          "description": "Warning banner at top of page/section",
          "classes": "bg-yellow-500/10 border border-yellow-500/50 text-yellow-700 dark:text-yellow-300"
        }
      }
    },
    "info": {
      "description": "Informational feedback",
      "color": "blue-500",
      "icon": "Info",
      "usage": "Helpful tips, contextual information",
      "patterns": {
        "tooltip": {
          "description": "Hover tooltip for additional info",
          "delay": "500ms",
          "maxWidth": "300px"
        },
        "hint": {
          "description": "Inline hint text",
          "classes": "text-muted-foreground text-sm"
        },
        "callout": {
          "description": "Highlighted information box",
          "classes": "bg-blue-500/10 border-l-4 border-blue-500 p-4"
        }
      }
    },
    "optimisticUI": {
      "description": "Update UI before server confirmation",
      "patterns": {
        "immediate": {
          "description": "Show success immediately, revert on error",
          "example": "Like button, toggle switch"
        },
        "pending": {
          "description": "Show pending state while processing",
          "classes": "opacity-70 pointer-events-none"
        },
        "rollback": {
          "description": "Revert changes on failure with error toast"
        }
      }
    }
  },
  "forms": {
    "layout": {
      "description": "Form layout guidelines",
      "labelPosition": "top",
      "labelGap": "0.5rem",
      "fieldGap": "1.5rem",
      "groupGap": "2rem",
      "patterns": {
        "stacked": {
          "description": "Single column, labels above fields",
          "classes": "space-y-6"
        },
        "inline": {
          "description": "Label and field on same line",
          "classes": "grid grid-cols-[140px_1fr] gap-4 items-center"
        },
        "grid": {
          "description": "Multi-column form layout",
          "classes": "grid grid-cols-1 md:grid-cols-2 gap-6"
        }
      }
    },
    "validation": {
      "timing": {
        "onBlur": "Validate when field loses focus (recommended)",
        "onChange": "Validate on every change (use sparingly)",
        "onSubmit": "Validate all fields on form submit"
      },
      "showError": {
        "position": "below",
        "color": "destructive",
        "fontSize": "sm",
        "icon": "AlertCircle",
        "animation": "fade-in slide-down"
      },
      "showSuccess": {
        "icon": "CheckCircle",
        "color": "green-500",
        "position": "right of input"
      },
      "liveValidation": {
        "description": "Real-time validation feedback",
        "passwordStrength": {
          "weak": { "color": "destructive", "width": "33%" },
          "medium": { "color": "yellow-500", "width": "66%" },
          "strong": { "color": "green-500", "width": "100%" }
        }
      }
    },
    "placeholders": {
      "description": "Placeholder text guidelines",
      "style": "Use examples, not instructions",
      "good": "john@example.com",
      "bad": "Enter your email",
      "color": "text-muted-foreground"
    },
    "requiredFields": {
      "indicator": "*",
      "position": "after label",
      "color": "text-destructive",
      "optionalLabel": "(optional)"
    },
    "fieldTypes": {
      "text": {
        "autoComplete": "on",
        "autoCapitalize": "off for emails",
        "spellCheck": "true for names, false for emails/passwords"
      },
      "password": {
        "showToggle": true,
        "minLength": 8,
        "strengthIndicator": true
      },
      "select": {
        "searchable": "true for > 5 options",
        "placeholder": "Select an option..."
      },
      "date": {
        "format": "User locale format",
        "picker": "Calendar popup"
      },
      "file": {
        "dragDrop": true,
        "preview": true,
        "maxSize": "Show in MB"
      }
    },
    "multiStep": {
      "description": "Multi-step form wizard",
      "progress": {
        "type": "steps or progress bar",
        "showStepNumbers": true,
        "showStepNames": true
      },
      "navigation": {
        "backButton": "always visible except step 1",
        "nextButton": "validate before proceeding",
        "saveProgress": "auto-save on step change"
      },
      "classes": {
        "step": "flex items-center gap-2",
        "stepActive": "text-primary font-medium",
        "stepCompleted": "text-green-500",
        "stepPending": "text-muted-foreground"
      }
    }
  },
  "modals": {
    "description": "Modal dialog guidelines",
    "overlay": {
      "background": "black/80",
      "blur": "4px",
      "clickToClose": true,
      "classes": "fixed inset-0 bg-black/80 backdrop-blur-sm z-50"
    },
    "animation": {
      "enter": {
        "overlay": "fade-in",
        "content": "fade-in zoom-in-95"
      },
      "exit": {
        "overlay": "fade-out",
        "content": "fade-out zoom-out-95"
      },
      "duration": "200ms"
    },
    "sizes": {
      "sm": { "maxWidth": "max-w-sm", "usage": "Simple confirmations" },
      "default": { "maxWidth": "max-w-lg", "usage": "Standard dialogs" },
      "lg": { "maxWidth": "max-w-2xl", "usage": "Complex forms" },
      "xl": { "maxWidth": "max-w-4xl", "usage": "Data-heavy content" },
      "fullscreen": { "maxWidth": "max-w-full h-full", "usage": "Immersive experiences" }
    },
    "behavior": {
      "trapFocus": true,
      "closeOnEscape": true,
      "preventScroll": true,
      "returnFocus": "Return focus to trigger on close"
    },
    "types": {
      "alert": {
        "description": "Important message requiring acknowledgment",
        "singleButton": true
      },
      "confirm": {
        "description": "Yes/No decision",
        "buttons": ["Cancel", "Confirm"]
      },
      "prompt": {
        "description": "Request user input",
        "hasInput": true
      },
      "form": {
        "description": "Complex form in modal",
        "scrollable": true
      }
    },
    "stacking": {
      "description": "Multiple modals behavior",
      "zIndexIncrement": 10,
      "dimPrevious": true
    }
  },
  "navigation": {
    "transitions": {
      "page": {
        "type": "fade",
        "duration": "200ms"
